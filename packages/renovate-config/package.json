{
  "name": "@openzeppelin/renovate-config",
  "version": "1.0.0",
  "description": "Shareable config preset for Renovate bot",
  "repository": "https://github.com/OpenZeppelin/code-style/tree/master/packages/renovate-config",
  "license": "MIT",
  "files": [],
  "renovate-config": {
    "default": {
      "rangeStrategy": "replace",
      "extends": [
        "helpers:disableTypesNodeMajor"
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "extends": ["schedule:weekly"],
        "commitMessageAction": "Update lockfile"
      }
    }
  }
}
